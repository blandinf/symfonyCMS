{% extends 'base.html.twig' %}

{% block title %}Offer{% endblock %}

{% block body %}
    <h1>Offer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ offer.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offer.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ offer.price }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ offer.date ? offer.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <p>{{ offer.image.name }}</p>
            <img
                alt="{{ offer.image.name }}"
                src="{{ asset('uploads/brochures/' ~ offer.image.name) }}" />
        </tbody>
    </table>

    <a href="{{ path('offers') }}">back to list</a>

    <a href="{{ path('offer_edit', {'id': offer.id}) }}">edit</a>

    {{ include('offer/_delete_form.html.twig') }}
{% endblock %}
